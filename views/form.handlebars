<div class="center" style="padding-bottom: 2em;">

  <div class="jumbotron">
  <img src="/images\favicon.ico" class="card-img-top" alt="..." style="width: 100px;">
    <p class="lead">We Bring You The Newest Shoes In The Market So Pre-Order Today!</p>
    <hr class="my-4">
  </div>
</div>



<div>

  <form action="/form" method="POST">
    <div>

      <div class="form-group">
        <h4 style="padding-bottom: 1em;padding-top:1em">Personal Details</h4>

        <div>
          <label>Full Name</label>
          <input type="text" class="form-control" id="customerName" placeholder="e.g Odwa Makhalima"
            style="text-align: center;width:300px" name="myUser" >
        </div>

        <div>
          <label>Contact Number</label>
          <input type="number" class="form-control" id="customerNumber" 
            style="text-align: center;width:300px" name="myNumber" >
        </div>

        <div style="padding-bottom: 1em;">
          <label>Email address</label>
          <input type="email" class="form-control" id="customerEmail" placeholder="name@example.com"
            style="text-align: center;width:450px" name="myMail" required>
        </div>



      </div>
    </div>

    <div style="padd">
      <div class="form-group">
        <label for="exampleFormControlSelect1">Choose Color</label>
        <select class="form-control" id="exampleFormControlSelect1" style="text-align: center;width:450px" name="colour"
          required>
          <option >Black</option>
          <option>Brown</option>
          <option>Red</option>
          <option>Blue</option>
          <option>White</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect2">Select Size</label>
        <select class="form-control" id="exampleFormControlSelect2" style="text-align: center;width:450px" name="size"
          required>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
        </select>
      </div>

    </div>

    <div style="padding-top: 1em;">
      <button type="submit" class="btn btn-primary" id="sub">Submit</button>
    </div>
  </form>

</div>